---
const {
  introLead = "Who is",
  introName = "Riad Mukhtarov",
  metaTitle = "Riad Mukhtarov — Portfolio",
  metaDescription = "Backend & Distributed Systems engineer building reliable, production‑ready, event‑driven systems.",
  metaImage = "https://r14dd.github.io/arch.png",
  structuredData = "",
  lang = "en",
} = Astro.props;
---
<!DOCTYPE html>
<html lang={lang} translate="no">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="google" content="notranslate" />
    <meta name="translate" content="no" />
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://r14dd.github.io" />
    <meta property="og:image" content={metaImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={metaImage} />
    {structuredData && <script type="application/ld+json" set:html={structuredData} />}

    <link rel="icon" href="/favicon.ico" />


    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <style is:global>
      :root {
        --bg: #050505;
        --text: #eeeeee;
        --text-soft: #a1a1a1;
        --muted: #888888;
        --accent: #dcdcdc;
        --border: rgba(255, 255, 255, 0.06);
      }

      * {
        box-sizing: border-box;
      }

      html {
        background: var(--bg);
        scroll-behavior: smooth;
      }

      body {
        background: var(--bg);
        color: var(--text-soft);
        font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        margin: 0;
        padding: 3rem 1.5rem 4rem;
        line-height: 1.8;
        font-size: 16px;
      }

      .content {
        max-width: 840px;
        margin: 0 auto;
      }

      .content,
      .side-nav,
      .side-links,
      .mobile-bar,
      .lang-switcher {
        transition: opacity 0.2s ease;
      }

      body.lang-switching .content,
      body.lang-switching .side-nav,
      body.lang-switching .side-links,
      body.lang-switching .mobile-bar,
      body.lang-switching .lang-switcher {
        opacity: 0;
        pointer-events: none;
      }

      h1 {
        font-size: 2.6rem;
        margin: 0 0 0.4rem;
        font-weight: 600;
        letter-spacing: -0.01em;
        color: var(--text);
      }

      h2 {
        font-size: 1.45rem;
        margin: 0 0 1rem 0;
        font-weight: 600;
        letter-spacing: 0.02em;
        color: var(--text);
      }

      h3 {
        font-size: 1rem;
        margin: 0.7rem 0 0.4rem 0;
        font-weight: 500;
        color: var(--text);
      }

      section {
        padding: 0;
        margin: 8rem 0 0;
      }

      section:first-of-type {
        margin-top: 2.5rem;
      }

      .lang-switcher {
        position: fixed;
        top: 1.5rem;
        right: 1.5rem;
        z-index: 200;
      }

      .lang-toggle {
        display: inline-flex;
        align-items: center;
        gap: 0.65rem;
        padding: 0.55rem 0.9rem;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        background: rgba(18, 18, 18, 0.75);
        color: var(--text);
        font-size: 0.92rem;
        backdrop-filter: blur(10px);
        cursor: pointer;
        transition: box-shadow 0.25s ease, border-color 0.25s ease, transform 0.2s ease;
      }

      .lang-toggle:hover {
        border-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 0 18px rgba(255, 255, 255, 0.15);
      }

      .lang-globe {
        font-size: 1.05rem;
      }

      .lang-caret {
        opacity: 0.7;
      }

      .lang-menu {
        position: absolute;
        top: calc(100% + 0.5rem);
        right: 0;
        display: none;
        flex-direction: column;
        min-width: 180px;
        padding: 0.5rem;
        border-radius: 16px;
        background: rgba(12, 12, 12, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px);
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.4);
      }

      .lang-switcher.open .lang-menu,
      .lang-menu.open {
        display: flex;
      }

      .lang-menu button {
        background: transparent;
        border: none;
        color: var(--text-soft);
        text-align: left;
        padding: 0.5rem 0.65rem;
        border-radius: 10px;
        font-size: 0.95rem;
        cursor: pointer;
        transition: background 0.2s ease, color 0.2s ease;
      }

      .lang-menu button:hover {
        background: rgba(255, 255, 255, 0.06);
        color: var(--text);
      }

      body.intro-done .lang-toggle {
        animation: lang-glow 1.8s ease-in-out 0.3s;
      }

      @keyframes lang-glow {
        0% { box-shadow: 0 0 0 rgba(255, 255, 255, 0); }
        50% { box-shadow: 0 0 20px rgba(255, 255, 255, 0.25); }
        100% { box-shadow: 0 0 0 rgba(255, 255, 255, 0); }
      }

      p {
        margin-top: 0.6rem;
        color: var(--text-soft);
      }

      small {
        display: block;
        margin-bottom: 0.6rem;
        color: var(--muted);
      }

      ul {
        padding-left: 1.2rem;
        margin-top: 0.6rem;
      }

      li {
        margin-bottom: 0.4rem;
        color: var(--text-soft);
      }

      li::marker {
        color: var(--muted);
      }

      code {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        color: var(--text);
        font-size: 0.88em;
        font-family: "JetBrains Mono", ui-monospace, SFMono-Regular, Menlo, monospace;
      }

      strong {
        color: var(--text);
      }

      em {
        color: var(--muted);
        font-style: italic;
      }

      a {
        color: var(--text);
        text-decoration: none;
        border-bottom: 1px solid rgba(237, 237, 237, 0.25);
        transition: opacity 0.2s ease, border-color 0.2s ease;
      }

      a:hover {
        opacity: 0.85;
        border-color: rgba(237, 237, 237, 0.7);
      }

      ::selection {
        background: rgba(237, 237, 237, 0.2);
        color: var(--text);
      }

      .page-intro {
        position: fixed;
        inset: 0;
        background: #050505;
        z-index: 999;
        pointer-events: none;
        overflow: hidden;
        display: grid;
        place-items: center;
        perspective: 1200px;
        animation: intro-exit 1.4s ease forwards;
      }

      .intro-phrase {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        color: rgba(237, 237, 237, 0.9);
        font-size: clamp(1rem, 3vw, 1.4rem);
        letter-spacing: 0.08em;
        text-transform: uppercase;
        opacity: 0;
        transition: opacity 0.15s ease;
      }

      .intro-phrase .lead {
        opacity: 0.65;
      }

      body.intro-ready .intro-phrase {
        opacity: 1;
      }

      .intro-name {
        display: inline-flex;
        gap: 0.12em;
        transform-style: preserve-3d;
        position: relative;
      }

      .intro-name span {
        display: inline-block;
        opacity: 0;
        transform: translateZ(40px) rotateX(-30deg);
        animation: letter-in 0.7s ease forwards;
      }

      @keyframes letter-in {
        0% { opacity: 0; transform: translateZ(40px) rotateX(-30deg); }
        100% { opacity: 1; transform: translateZ(0px) rotateX(0deg); }
      }

      @keyframes intro-exit {
        0% { opacity: 1; visibility: visible; }
        85% { opacity: 1; visibility: visible; }
        100% { opacity: 0; visibility: hidden; }
      }

      .intro-bricks {
        position: fixed;
        inset: 0;
        z-index: 998;
        pointer-events: none;
        background:
          linear-gradient(90deg, rgba(5,5,5,0.95) 50%, rgba(5,5,5,0.7) 50%),
          linear-gradient(0deg, rgba(5,5,5,0.95) 50%, rgba(5,5,5,0.7) 50%);
        background-size: 48px 32px;
        opacity: 1;
        animation: bricks-reveal 0.9s ease forwards 1.1s;
      }

      @keyframes bricks-reveal {
        0% { opacity: 1; }
        100% { opacity: 0; }
      }

      body.intro-done section {
        opacity: 1;
        transform: translateX(0);
      }

      section {
        opacity: 0;
        transform: translateX(-18px);
        transition: transform 0.6s ease, opacity 0.6s ease;
        will-change: transform, opacity;
      }

      section:nth-of-type(even) {
        transform: translateX(18px);
      }

      @media (prefers-reduced-motion: reduce) {
        .page-intro,
        .intro-bricks {
          display: none !important;
        }

        .intro-name span,
        .intro-name,
        .intro-phrase {
          animation: none !important;
          transform: none !important;
          opacity: 1 !important;
        }

        section {
          opacity: 1 !important;
          transform: none !important;
          transition: none !important;
        }
      }

      footer {
        margin-top: 4rem;
        padding-top: 2rem;
        text-align: center;
        font-size: 0.75rem;
        color: var(--muted);
        border-top: 1px solid var(--border);
      }

      .section-block {
        padding-top: 1rem;
        border-top: 1px solid var(--border);
        margin-top: 3.2rem;
      }

      .side-nav {
        position: fixed;
        left: 2.5rem;
        top: 50%;
        transform: translateY(-50%);
        display: flex;
        flex-direction: column;
        gap: 0.7rem;
        padding: 0.8rem 1rem;
        background: rgba(5, 5, 5, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 12px;
        backdrop-filter: blur(10px);
        z-index: 10;
      }

      .side-nav a {
        border-bottom: none;
        color: var(--text-soft);
        font-size: 0.85rem;
        transition: color 0.2s ease, opacity 0.2s ease;
      }

      .side-nav a.active {
        color: var(--text);
      }

      .side-nav.blurred {
        background: rgba(5, 5, 5, 0.75);
        backdrop-filter: blur(14px);
      }

      .side-links {
        position: fixed;
        right: 2.5rem;
        top: 50%;
        transform: translateY(-50%);
        display: flex;
        flex-direction: column;
        gap: 0.7rem;
        padding: 0.8rem 1rem;
        background: rgba(5, 5, 5, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 12px;
        backdrop-filter: blur(10px);
        z-index: 10;
      }

      .side-links a {
        border-bottom: none;
        color: var(--text-soft);
        font-size: 0.85rem;
        transition: color 0.2s ease, opacity 0.2s ease;
      }

      .side-links.blurred {
        background: rgba(5, 5, 5, 0.75);
        backdrop-filter: blur(14px);
      }

      .side-links .mono {
        font-size: 0.7rem;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: var(--muted);
      }

      .resume-hover {
        position: relative;
        display: inline-flex;
        flex-direction: column;
      }

      .resume-preview {
        position: absolute;
        top: 1.6rem;
        right: 0;
        width: 220px;
        height: 280px;
        background: rgba(10, 10, 10, 0.92);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.55);
        opacity: 0;
        transform: translateY(6px);
        pointer-events: none;
        transition: opacity 0.2s ease, transform 0.2s ease;
        overflow: hidden;
        z-index: 3;
      }

      .resume-preview iframe {
        width: 100%;
        height: 100%;
        border: 0;
      }

      .resume-hover:hover .resume-preview,
      .resume-hover:focus-within .resume-preview {
        opacity: 1;
        transform: translateY(0);
      }

      .mobile-bar {
        display: none;
        position: fixed;
        left: 50%;
        transform: translateX(-50%);
        bottom: calc(1rem + env(safe-area-inset-bottom));
        z-index: 12;
        background: rgba(15, 15, 15, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 999px;
        padding: 0.4rem 0.8rem;
        display: flex;
        align-items: center;
        gap: 0.6rem;
        backdrop-filter: blur(12px);
      }

      .hamburger {
        width: 36px;
        height: 32px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(10, 10, 10, 0.6);
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        gap: 4px;
        align-items: center;
        justify-content: center;
        padding: 0;
      }

      .hamburger span {
        display: block;
        width: 18px;
        height: 2px;
        background: var(--text);
        opacity: 0.7;
      }

      .mobile-current {
        font-size: 0.85rem;
        color: var(--text-soft);
        letter-spacing: 0.02em;
        white-space: nowrap;
      }

      .mobile-current.active {
        color: var(--text);
        text-shadow: 0 0 10px rgba(237, 237, 237, 0.35);
      }

      .mobile-menu {
        display: none;
        position: fixed;
        left: 1rem;
        right: 1rem;
        bottom: calc(4.2rem + env(safe-area-inset-bottom));
        background: rgba(10, 10, 10, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 10px;
        padding: 0.8rem 1rem;
        backdrop-filter: blur(10px);
        z-index: 12;
      }

      .mobile-menu.open {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        text-align: center;
      }

      .scroll-rail {
        position: fixed;
        left: 1.2rem;
        top: 0;
        bottom: 0;
        width: 1px;
        background: rgba(255, 255, 255, 0.08);
        z-index: 9;
      }

      .scroll-progress {
        position: absolute;
        left: 0;
        top: 0;
        width: 1px;
        height: 0;
        background: rgba(255, 255, 255, 0.35);
        transition: height 0.15s ease;
      }

      .mono {
        font-family: "JetBrains Mono", ui-monospace, SFMono-Regular, Menlo, monospace;
        font-size: 0.85rem;
        letter-spacing: 0.01em;
        color: var(--muted);
      }
      .reading-list li {
        display: grid;
        grid-template-columns: minmax(180px, 1fr) minmax(260px, 2fr);
        gap: 1rem 1.5rem;
        align-items: baseline;
        white-space: normal;
      }

      .reading-quote {
        color: var(--muted);
        font-size: 0.85rem;
        text-align: left;
      }

      .reading-inline {
        margin-top: 0.8rem;
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
      }

      .project-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 0.6rem 1rem;
        align-items: baseline;
      }

      .experience-header {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .experience-subheader {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .experience-stack {
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
        margin-bottom: 0.4rem;
      }

      .company-name {
        color: var(--text);
        font-weight: 500;
        font-size: 0.95rem;
      }

      .exp-meta {
        opacity: 0.4;
        transition: opacity 0.2s ease;
        font-size: 0.85rem;
        font-weight: 400;
        font-family: inherit;
        line-height: 1.4;
        color: var(--muted);
      }

      .project-card:hover .exp-meta {
        opacity: 1;
      }

      .meta-block {
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
      }


      .job-title {
        font-weight: 600;
        color: var(--text);
      }

      .project-tech {
        color: var(--muted);
        font-size: 0.85rem;
        font-weight: 400;
        line-height: 1.4;
        opacity: 0.4;
        transition: opacity 0.2s ease;
      }

      .tech-meta {
        color: var(--muted);
        font-size: 0.85rem;
        font-weight: 400;
        line-height: 1.4;
        opacity: 0.4;
        transition: opacity 0.2s ease;
      }

      .project-card:hover .tech-meta,
      .meta-card:hover .tech-meta {
        opacity: 1;
      }

      .project-header {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .project-impact {
        margin-top: 0.6rem;
        color: var(--text-soft);
        font-size: 0.95rem;
      }

      .project-impact strong {
        color: var(--text);
        font-weight: 600;
      }

      .project-link {
        opacity: 0;
        transition: opacity 0.2s ease, border-color 0.2s ease;
        border: 1px solid rgba(255, 255, 255, 0.12);
        padding: 0.3rem 0.8rem;
        border-radius: 999px;
        font-size: 0.8rem;
        color: var(--text-soft);
        text-decoration: none;
      }

      .project-card:hover .project-link {
        opacity: 1;
        box-shadow: 0 0 12px rgba(255, 255, 255, 0.12);
      }

      .project-card:hover .project-link:hover {
        border-color: rgba(255, 255, 255, 0.5);
        box-shadow: 0 0 14px rgba(255, 255, 255, 0.22);
      }

      .project-card:hover .project-tech {
        opacity: 1;
      }

      @media (min-width: 1170px) {
        .side-links .mono {
          display: none;
        }
      }

      .simulate-btn {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.12);
        color: var(--text-soft);
        padding: 0.3rem 0.8rem;
        border-radius: 999px;
        font-size: 0.8rem;
        cursor: pointer;
        transition: opacity 0.2s ease, border-color 0.2s ease, color 0.2s ease;
        opacity: 0;
      }

      .project-card:hover .simulate-btn {
        opacity: 1;
        box-shadow: 0 0 12px rgba(255, 255, 255, 0.12);
      }

      .project-card:hover .simulate-btn:hover {
        border-color: rgba(255, 255, 255, 0.5);
        color: var(--text);
        box-shadow: 0 0 14px rgba(255, 255, 255, 0.22);
      }

      .sim-visual {
        margin-top: 0.6rem;
        opacity: 0;
        max-height: 0;
        overflow: hidden;
        transition: opacity 0.2s ease, max-height 0.2s ease;
      }

      .sim-visual.active {
        opacity: 1;
        max-height: 120px;
      }

      .sim-visual svg {
        width: 260px;
        max-width: 100%;
        height: auto;
        display: block;
      }

      .sim-node {
        fill: rgba(255, 255, 255, 0.12);
        stroke: rgba(255, 255, 255, 0.28);
        stroke-width: 1;
      }

      .sim-link {
        stroke: rgba(255, 255, 255, 0.28);
        stroke-width: 1;
      }

      .sim-label {
        fill: rgba(237, 237, 237, 0.55);
        font-size: 9px;
        text-anchor: middle;
        dominant-baseline: middle;
      }

      .sim-legend {
        margin-top: 0.3rem;
        font-size: 0.78rem;
        color: rgba(237, 237, 237, 0.55);
      }

      .sim-pulse {
        fill: rgba(255, 255, 255, 0.7);
      }

      .sim-visual.active .sim-pulse {
        animation: pulse 1.8s ease-in-out infinite;
      }

      .sim-visual.active .sim-link {
        stroke-dasharray: 3 4;
        animation: dash 1.2s linear infinite;
      }

      .sim-visual.active .sim-node {
        animation: nodeGlow 1.6s ease forwards;
      }

      .sim-visual.active .node-1 { animation-delay: 0s; }
      .sim-visual.active .node-2 { animation-delay: 0.15s; }
      .sim-visual.active .node-3 { animation-delay: 0.3s; }
      .sim-visual.active .node-4 { animation-delay: 0.45s; }
      .sim-visual.active .node-5 { animation-delay: 0.6s; }
      .sim-visual.active .node-6 { animation-delay: 0.75s; }
      .sim-visual.active .node-7 { animation-delay: 0.9s; }
      .sim-visual.active .node-8 { animation-delay: 1.05s; }

      @keyframes pulse {
        0%, 100% { opacity: 0.4; transform: scale(0.9); }
        50% { opacity: 1; transform: scale(1.2); }
      }

      @keyframes dash {
        to { stroke-dashoffset: -14; }
      }

      @keyframes nodeGlow {
        0% { fill: rgba(255, 255, 255, 0.12); stroke: rgba(255, 255, 255, 0.28); }
        40% { fill: rgba(255, 255, 255, 0.45); stroke: rgba(255, 255, 255, 0.6); }
        100% { fill: rgba(255, 255, 255, 0.18); stroke: rgba(255, 255, 255, 0.3); }
      }

      .mono {
        font-family: 'SFMono-Regular', ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      }

      .sim-label.mono {
        opacity: 0.32;
        transition: opacity 0.2s ease;
      }

      .sim-visual.active .step-ingest,
      .sim-visual.active .step-hub,
      .sim-visual.active .step-ai,
      .sim-visual.active .step-rule,
      .sim-visual.active .step-case {
        animation: labelPulse 2.4s ease-in-out infinite;
      }

      @keyframes labelPulse {
        0%, 100% { opacity: 0.32; }
        40% { opacity: 0.8; }
      }

      .skills-line {
        white-space: nowrap;
      }

      .content ul li {
        white-space: nowrap;
      }

      .reading-list li {
        white-space: normal;
      }

      .reading-inline {
        margin-top: 0.3rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .reading-row {
        display: grid;
        grid-template-columns: minmax(200px, 1fr) minmax(280px, 2fr);
        gap: 1rem 1.5rem;
        align-items: baseline;
        position: relative;
        padding: 0.15rem 0;
      }

      .author {
        color: var(--text);
        font-weight: 500;
      }

      .project-actions {
        display: flex;
        gap: 0.6rem;
