    <div class="page-intro" aria-hidden="true">
      <div class="intro-phrase">
        <span class="lead">{introLead}</span>
        <span class="intro-name" aria-label={introName}>
          {introName.split("").map((char, idx) => (
            <span style={`animation-delay:${(0.05 + idx * 0.08).toFixed(2)}s`}>
              {char === " " ? "\u00A0" : char}
            </span>
          ))}
        </span>
      </div>
    </div>
    <div class="intro-bricks" aria-hidden="true"></div>
    <slot />
    <script>
      window.addEventListener("load", () => {
        const prefersReduced = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
        if (prefersReduced) {
          document.body.classList.add("intro-done");
          return;
        }
        const introLeadEl = document.querySelector(".intro-phrase .lead");
        const savedLang = localStorage.getItem("portfolio-lang") || "en";
        try {
          const i18nEl = document.getElementById("i18n-data");
          if (i18nEl?.textContent) {
            const data = JSON.parse(i18nEl.textContent);
            const lead = data?.[savedLang]?.labels?.introLead;
            if (introLeadEl && lead) introLeadEl.textContent = lead;
          }
        } catch {
          // noop
        }
        document.body.classList.add("intro-ready");
        setTimeout(() => {
          document.body.classList.add("intro-done");
        }, 1400);
      });
    </script>

